@model Events
@using Syncfusion.EJ2


<link href="~/css/dasboard/lightpick.css" rel="stylesheet" />



<div>
    <input name="isNew" value="false" hidden="hidden" />
    <input asp-for="Id" value="@Model.Id" hidden="hidden" />
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="EventName" value="@Model.EventName" />
                <span class="e-float-line"></span>
                <label asp-for="EventName" class="e-float-text e-label-top">Event Name</label>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="DateFrom" value="@Model.DateFrom" type="text"/>
                <span class="e-float-line"></span>
                <label asp-for="DateFrom" class="e-float-text e-label-top">Dari</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="DateTo" value="@Model.DateTo" type="text"/>
                <span class="e-float-line"></span>
                <label asp-for="DateTo" class="e-float-text e-label-top">Sampai</label>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <textarea asp-for="Description" value="@Model.Description"></textarea>
                <span class="e-float-line"></span>
                <label asp-for="Description" class="e-float-text e-label-top">Description</label>
            </div>
        </div>
    </div>



</div>


<ejs-scripts></ejs-scripts>

